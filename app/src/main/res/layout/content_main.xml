<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/com.smobee.android.scrollsheetbehaviour"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundMain"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.smobee.android.scrollsheetbehaviour.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Hello World!"
        />

    <FrameLayout
        android:id="@+id/south_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundSouthSheet"
        android:elevation="2dp"
        custom:south_behavior_hideable="true"
        custom:south_behavior_peekHeight="150dp"
        app:layout_behavior="com.smobee.android.scrollsheetbehaviour.widget.SouthSheetBehavior"
        tools:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/west_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundWestSheet"
        android:elevation="4dp"
        custom:west_behavior_hideable="true"
        custom:west_behavior_peekWidth="150dp"
        app:layout_behavior="com.smobee.android.scrollsheetbehaviour.widget.WestSheetBehavior"
        tools:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/east_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundEastSheet"
        android:elevation="6dp"
        custom:east_behavior_hideable="true"
        custom:east_behavior_peekWidth="150dp"
        app:layout_behavior="com.smobee.android.scrollsheetbehaviour.widget.EastSheetBehavior"
        tools:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/north_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundNorthSheet"
        android:elevation="8dp"
        custom:north_behavior_hideable="true"
        custom:north_behavior_peekHeight="150dp"
        app:layout_behavior="com.smobee.android.scrollsheetbehaviour.widget.NorthSheetBehavior"
        tools:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        </LinearLayout>
    </FrameLayout>



</android.support.design.widget.CoordinatorLayout>
